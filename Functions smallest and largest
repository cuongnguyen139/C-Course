int largest(int first, int second, int third)
	{
      if(first>=second && first>=third)
         return first;
      if(second>=first && second>=third)
         return second;
      if(third>=first && third>=second)
         return third;
    }
int smallest(int first, int second, int third)  
	{
      if(first<=second && first<=third)
         return first;
      if(second<=first && second<=third)
         return second;
      if(third<=first && third<=second)
         return third;
    }
