		#include <iostream>
		#include <string.h>
		using namespace std;
        
       int main()
       { 
         int number_pressed;
		 int n1,n2;
		 
		 cout << "Choose desired calculation:\n";
		 cout << "1: subtraction\n"; 
		 cout << "2: addition\n"; 
		 cout << "3: multiplication\n"; 
		 cout << "4: division\n";
		 cout << "5: Remainder\n"; 
		   
         cout << "Choose a calculation:"; 
         cin >> number_pressed; 
		 
		 cout << "Input first number:"; 
         cin >> n1;
		   
		 cout << "Input second number:"; 
         cin >> n2;  
          
         switch(number_pressed) 
         { 
          case 1: 
          { 
            cout << n1 << "-" << n2 << " = " << n1-n2 << endl; 
            break;
          } 
          case 2: 
          {  
            cout << n1 << "+" << n2 << " = " << n1+n2 << endl; 
            break;
          } 
          case 3: 
          { 
            cout << n1 << "*" << n2 << " = " << n1*n2 << endl;
            break;
          } 
		  case 4: 
          { 
            cout << n1 << "/" << n2 << " = " << n1/n2 << endl;
            break;
          }
		  case 5: 
          { 
            cout << n1 << "%" << n2 << " = " << n1%n2 << endl;
            break;
          }
          default: 
            cout << "Your input is outside the allowed range.";
        } 
       return 0;
     }
